@{
	Layout = "_LayoutFreelancer";
	ViewData["Title"] = "Dashboard";
}

@model Freelancing.Models.Entities.PeerMentorship

<div class="p-4 sm:ml-64">
	<div class="p-4 mt-20">
		<div class="mt-20" style="margin-top: 100px">
			<div class="text-center block w-full p-6">
				<h6 class="mb-4 text-5xl font-bold text-gray-900">GIGBuddies</h6>
				<h5 class="text-xl font-light text-gray-900 tracking-tight text-balance sm:text-lg">an integrated mentorship platform that connects aspiring freelancers with experienced mentors. Whether you're just starting out or looking to level up your career, our community-driven system offers personalized guidance, skills development, and real-world opportunities—all in one place. Join us and thrive in the gig economy through peer support and professional growth.</h5>
			</div>
			<div class="text-center block w-full p-6">
				@if (Model.Role == "Mentee")
				{
					<a asp-controller="MentorshipMatching" asp-action="MenteeDashboard" type="button" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800">Go to Dashboard</a>
				}
				else
				{
					<a asp-controller="MentorshipMatching" asp-action="MentorDashboard" type="button" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800">Go to Dashboard</a>
				}
			</div>
		</div>
	</div>
</div>