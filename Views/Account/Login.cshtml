@model Freelancing.Models.LoginViewModel

@{
	Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"]Login</title>
	<link rel="stylesheet" href="~/css/output.css" />
	<link rel="stylesheet" href="https://rsms.me/inter/inter.css" />
	<style>
		/* Aesthetic moving gradient animations */
		@@keyframes gradient-move-1 {
			0% { transform: translateX(-50%) rotate(0deg); }
			50% { transform: translateX(-50%) rotate(180deg); }
			100% { transform: translateX(-50%) rotate(360deg); }
		}

		@@keyframes gradient-move-2 {
			0% { transform: translateX(-50%) rotate(360deg); }
			50% { transform: translateX(-50%) rotate(180deg); }
			100% { transform: translateX(-50%) rotate(0deg); }
		}

		@@keyframes gradient-shift {
			0% { background-position: 0% 50%; }
			50% { background-position: 100% 50%; }
			100% { background-position: 0% 50%; }
		}

		@@keyframes float {
			0%, 100% { transform: translateY(0px) rotate(30deg); }
			50% { transform: translateY(-20px) rotate(30deg); }
		}

		@@keyframes float-reverse {
			0%, 100% { transform: translateY(0px) rotate(-30deg); }
			50% { transform: translateY(20px) rotate(-30deg); }
		}

		@@keyframes pulse-glow {
			0%, 100% { opacity: 0.25; filter: blur(40px); }
			50% { opacity: 0.4; filter: blur(30px); }
		}

		.moving-gradient-1 {
			animation: gradient-move-1 20s ease-in-out infinite, float 6s ease-in-out infinite;
		}

		.moving-gradient-2 {
			animation: gradient-move-2 25s ease-in-out infinite, float-reverse 8s ease-in-out infinite;
		}

		.moving-gradient-3 {
			animation: gradient-shift 15s ease infinite;
			background-size: 400% 400%;
		}

		/* Aesthetic floating gradient elements with new colors */
		.floating-gradient {
			position: absolute;
			border-radius: 50%;
			filter: blur(40px);
			opacity: 0.25;
			animation: float 10s ease-in-out infinite, pulse-glow 4s ease-in-out infinite;
		}

		.floating-gradient:nth-child(1) {
			width: 350px;
			height: 350px;
			background: linear-gradient(45deg, #c7fff0, #faffb8);
			top: 5%;
			left: 5%;
			animation-delay: 0s;
		}

		.floating-gradient:nth-child(2) {
			width: 280px;
			height: 280px;
			background: linear-gradient(45deg, #faffb8, #c7fff0);
			top: 50%;
			right: 10%;
			animation-delay: -3s;
		}

		.floating-gradient:nth-child(3) {
			width: 220px;
			height: 220px;
			background: linear-gradient(45deg, #c7fff0, #faffb8);
			bottom: 15%;
			left: 15%;
			animation-delay: -6s;
		}

		.floating-gradient:nth-child(4) {
			width: 180px;
			height: 180px;
			background: linear-gradient(45deg, #faffb8, #c7fff0);
			top: 30%;
			left: 60%;
			animation-delay: -9s;
		}

		/* Enhanced background gradient with new colors */
		.aesthetic-bg {
			background: linear-gradient(-45deg, #c7fff0, #faffb8, #c7fff0, #faffb8, #c7fff0, #faffb8);
			background-size: 400% 400%;
			animation: gradient-shift 20s ease infinite;
		}
	</style>
</head>
<body>
	<header class="absolute inset-x-0 top-0 z-50">
		<nav class="flex items-center justify-between p-6 lg:px-8" aria-label="Global">
			<div class="flex lg:flex-1">
				<a class="-m-1.5 p-4" asp-area="" asp-controller="Home" asp-action="Index">
					<span class="sr-only">Your Company</span>
					<img class="h-11 w-auto" src="https://ik.imagekit.io/6txj3mofs/logoTop.png?updatedAt=1750343114427" alt="">
				</a>
			</div>
		</nav>
	</header>
	<div class="bg-white relative overflow-hidden">
		<!-- Aesthetic floating gradient elements -->
		<div class="floating-gradient"></div>
		<div class="floating-gradient"></div>
		<div class="floating-gradient"></div>
		<div class="floating-gradient"></div>
		
		<div class="relative isolate px-6 pt-[10px] lg:px-8">
			<div class="absolute inset-x-0 -top-40 -z-10 transform-gpu overflow-hidden blur-3xl sm:-top-80" aria-hidden="true">
				<div class="relative left-1/2 aspect-[1155/678] w-[36.125rem] -translate-x-1/2 rotate-[30deg] bg-gradient-to-tr from-[#c7fff0] to-[#faffb8] opacity-30 sm:left-[calc(50%-30rem)] sm:w-[72.1875rem] moving-gradient-1"
					 style="clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)">
				</div>
			</div>
			
			<!-- Aesthetic moving gradient background -->
			<div class="absolute inset-0 -z-20">
				<div class="absolute inset-0 aesthetic-bg"></div>
			</div>
			
			<div class="grid grid-cols-1 lg:grid-cols-2 items-center py-16 sm:py-24 lg:py-32 px-4">

				<div class="flex items-center justify-center w-full">
					<div class="w-1/2 flex flex-col items-center justify-center p-6 bg-white border border-gray-200 rounded-lg shadow">
						<div class="mb-5">
							<h5 class="mb-2 text-2xl font-bold text-gray-900">Log In</h5>
						</div>
						<div class="w-full">
							<form asp-action="Login">
								<label asp-for="UserNameorEmail" id="email-address" class="control-label block mb-2 text-sm font-medium text-gray-900">Username or Email</label>
								<div class="relative">
									<div class="absolute inset-y-0 start-0 flex items-center ps-3.5 pointer-events-none">
										<svg class="w-4 h-4 text-gray-500" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 16">
											<path d="m10.036 8.278 9.258-7.79A1.979 1.979 0 0 0 18 0H2A1.987 1.987 0 0 0 .641.541l9.395 7.737Z" />
											<path d="M11.241 9.817c-.36.275-.801.425-1.255.427-.428 0-.845-.138-1.187-.395L0 2.6V14a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V2.5l-8.759 7.317Z" />
										</svg>
									</div>
									<input asp-for="UserNameorEmail" id="email-address-icon" class="form-control bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full ps-10 p-2.5" placeholder="" required>
								</div>
								<label asp-for="Password" id="password-address" class="control-label block mt-4 mb-2 text-sm font-medium text-gray-900">Password</label>
								<div class="relative">
									<div class="absolute inset-y-0 start-0 flex items-center ps-3.5 pointer-events-none">
										<svg class="w-6 h-6 text-gray-800" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 24 24">
											<path fill-rule="evenodd" d="M8 10V7a4 4 0 1 1 8 0v3h1a2 2 0 0 1 2 2v7a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2v-7a2 2 0 0 1 2-2h1Zm2-3a2 2 0 1 1 4 0v3h-4V7Zm2 6a1 1 0 0 1 1 1v3a1 1 0 1 1-2 0v-3a1 1 0 0 1 1-1Z" clip-rule="evenodd" />
										</svg>
									</div>
									<input asp-for="Password" id="password-icon" class="form-control bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full ps-10 p-2.5" placeholder="" required>
								</div>
								@if (ViewData.ModelState.ErrorCount > 0)
								{
									<div class="mt-2 flex items-center p-4 mb-4 text-sm text-red-800 border border-red-300 rounded-lg bg-red-50" role="alert">
										<svg class="shrink-0 inline w-4 h-4 me-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
											<path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM9.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM12 15H8a1 1 0 0 1 0-2h1v-3H8a1 1 0 0 1 0-2h2a1 1 0 0 1 1 1v4h1a1 1 0 0 1 0 2Z" />
										</svg>
										<span class="sr-only">Info</span>
										<div asp-validation-summary="ModelOnly">
										</div>
									</div>
								}
								<input type="submit" value="Login" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm w-full py-2.5 me-2 mb-2 mt-3 focus:outline-none" />
							</form>
						</div>
						<div class="mt-4">
							<p class="text-sm font-light text-gray-900">Don't have an account yet?</p>
							<a asp-controller="Account" asp-action="Registration"><p class="text-center mb-2 text-sm font-medium text-blue-900">Register</p></a>
						</div>
					</div>
				</div>


				<div class="flex items-center justify-center w-full">
					<img class="w-3/4 h-3/4" src="https://ik.imagekit.io/6txj3mofs/front.png?updatedAt=1750340542946" alt="">
				</div>
			</div>
			<div class="absolute inset-x-0 top-[calc(100%-13rem)] -z-10 transform-gpu overflow-hidden blur-3xl sm:top-[calc(100%-30rem)]" aria-hidden="true">
				<div class="relative left-[calc(50%+3rem)] aspect-[1155/678] w-[36.125rem] -translate-x-1/2 bg-gradient-to-tr from-[#faffb8] to-[#c7fff0] opacity-30 sm:left-[calc(50%+36rem)] sm:w-[72.1875rem] moving-gradient-2"
					 style="clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)">
				</div>
			</div>
		</div>
	</div>
	@section Scripts {
		@{
			await Html.RenderPartialAsync("_ValidationScriptsPartial");
		}
	}
	<script src="~/node_modules/flowbite/dist/flowbite.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.2.1/flowbite.min.js"></script>
</body>
</html>