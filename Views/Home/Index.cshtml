@{
	Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"]GIGHub</title>
	<link rel="stylesheet" href="~/css/output.css" />
	<link rel="stylesheet" href="https://rsms.me/inter/inter.css" />
	<style>
		/* Aesthetic moving gradient animations */
		@@keyframes gradient-move-1 {
			0% { transform: translateX(-50%) rotate(0deg); }
			50% { transform: translateX(-50%) rotate(180deg); }
			100% { transform: translateX(-50%) rotate(360deg); }
		}

		@@keyframes gradient-move-2 {
			0% { transform: translateX(-50%) rotate(360deg); }
			50% { transform: translateX(-50%) rotate(180deg); }
			100% { transform: translateX(-50%) rotate(0deg); }
		}

		@@keyframes gradient-shift {
			0% { background-position: 0% 50%; }
			50% { background-position: 100% 50%; }
			100% { background-position: 0% 50%; }
		}

		@@keyframes float {
			0%, 100% { transform: translateY(0px) rotate(30deg); }
			50% { transform: translateY(-20px) rotate(30deg); }
		}

		@@keyframes float-reverse {
			0%, 100% { transform: translateY(0px) rotate(-30deg); }
			50% { transform: translateY(20px) rotate(-30deg); }
		}

		@@keyframes pulse-glow {
			0%, 100% { opacity: 0.25; filter: blur(40px); }
			50% { opacity: 0.4; filter: blur(30px); }
		}

		.moving-gradient-1 {
			animation: gradient-move-1 20s ease-in-out infinite, float 6s ease-in-out infinite;
		}

		.moving-gradient-2 {
			animation: gradient-move-2 25s ease-in-out infinite, float-reverse 8s ease-in-out infinite;
		}

		.moving-gradient-3 {
			animation: gradient-shift 15s ease infinite;
			background-size: 400% 400%;
		}

		/* Aesthetic floating gradient elements with new colors */
		.floating-gradient {
			position: absolute;
			border-radius: 50%;
			filter: blur(40px);
			opacity: 0.25;
			animation: float 10s ease-in-out infinite, pulse-glow 4s ease-in-out infinite;
		}

		.floating-gradient:nth-child(1) {
			width: 350px;
			height: 350px;
			background: linear-gradient(45deg, #c7fff0, #faffb8);
			top: 5%;
			left: 5%;
			animation-delay: 0s;
		}

		.floating-gradient:nth-child(2) {
			width: 280px;
			height: 280px;
			background: linear-gradient(45deg, #faffb8, #c7fff0);
			top: 50%;
			right: 10%;
			animation-delay: -3s;
		}

		.floating-gradient:nth-child(3) {
			width: 220px;
			height: 220px;
			background: linear-gradient(45deg, #c7fff0, #faffb8);
			bottom: 15%;
			left: 15%;
			animation-delay: -6s;
		}

		.floating-gradient:nth-child(4) {
			width: 180px;
			height: 180px;
			background: linear-gradient(45deg, #faffb8, #c7fff0);
			top: 30%;
			left: 60%;
			animation-delay: -9s;
		}

		/* Enhanced background gradient with new colors */
		.aesthetic-bg {
			background: linear-gradient(-45deg, #c7fff0, #faffb8, #c7fff0, #faffb8, #c7fff0, #faffb8);
			background-size: 400% 400%;
			animation: gradient-shift 20s ease infinite;
		}
	</style>
</head>
<body>
	<header class="absolute inset-x-0 top-0 z-50">
		<nav class="flex items-center justify-between p-6 lg:px-8" aria-label="Global">
			<div class="flex lg:flex-1">
				<a class="-m-1.5 p-4" asp-area="" asp-controller="Home" asp-action="Index">
					<span class="sr-only">Your Company</span>
					<img class="h-11 w-auto" src="https://ik.imagekit.io/6txj3mofs/logoTop.png?updatedAt=1750343114427" alt="">
				</a>
			</div>
			@if (Context.User.Identity.Name != null)
			{
				<div class="hidden lg:flex lg:flex-1 lg:justify-end">
					<a asp-controller="Client" asp-action="Dashboard" class="text-sm/6 font-semibold text-gray-900">Dashboard<span aria-hidden="true">&rarr;</span></a>
				</div>
			}
			else
			{
				<div class="hidden me-4 lg:flex lg:flex-1 lg:justify-end">
					<a asp-controller="Account" asp-action="Login" class="text-lg font-semibold text-gray-900">Log in<span aria-hidden="true">&rarr;</span></a>
				</div>
			}
		</nav>
	</header>
	<div class="bg-white relative overflow-hidden">
		<!-- Aesthetic floating gradient elements -->
		<div class="floating-gradient"></div>
		<div class="floating-gradient"></div>
		<div class="floating-gradient"></div>
		<div class="floating-gradient"></div>
		
		<div class="relative isolate px-6 pt-[10px] lg:px-8">
			<div class="absolute inset-x-0 -top-40 -z-10 transform-gpu overflow-hidden blur-3xl sm:-top-80" aria-hidden="true">
				<div class="relative left-1/2 aspect-[1155/678] w-[36.125rem] -translate-x-1/2 rotate-[30deg] bg-gradient-to-tr from-[#c7fff0] to-[#faffb8] opacity-30 sm:left-[calc(50%-30rem)] sm:w-[72.1875rem] moving-gradient-1"
					 style="clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)">
				</div>
			</div>
			
			<!-- Aesthetic moving gradient background -->
			<div class="absolute inset-0 -z-20">
				<div class="absolute inset-0 aesthetic-bg"></div>
			</div>
			
			<div class="grid grid-cols-1 lg:grid-cols-2 items-center py-16 sm:py-24 lg:py-32 px-4">
				<div class="max-w-xl">
					<div class="text-left">
						<h1 class="text-5xl font-bold tracking-tight text-balance text-gray-800 sm:text-7xl">Unlock growth with every project</h1>
						<p class="mt-5 text-xl font-light tracking-tight text-balance text-gray-700 sm:text-lg">Start your freelancing career with us. Post a project, bid, and interact with fellow freelancers. Get started now by choosing a role.</p>
						<div class="mt-5 flex items-center justify-left gap-x-1">
							<a type="button" class="text-white bg-gradient-to-r from-cyan-500 to-blue-500 hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-cyan-300 dark:focus:ring-cyan-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2" asp-controller="Account" asp-action="Registration" asp-route-role="Freelancer">Freelancer</a>
							<a type="button" class="text-white bg-gradient-to-br from-green-400 to-blue-600 hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-green-200 dark:focus:ring-green-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2" asp-controller="Account" asp-action="Registration" asp-route-role="Client">Client</a>
						</div>
					</div>
				</div>
				<div class="flex items-center justify-center w-full">
					<img class="w-3/4 h-3/4" src="https://ik.imagekit.io/6txj3mofs/front.png?updatedAt=1750340542946" alt="">
				</div>
			</div>
			<div class="absolute inset-x-0 top-[calc(100%-13rem)] -z-10 transform-gpu overflow-hidden blur-3xl sm:top-[calc(100%-30rem)]" aria-hidden="true">
				<div class="relative left-[calc(50%+3rem)] aspect-[1155/678] w-[36.125rem] -translate-x-1/2 bg-gradient-to-tr from-[#faffb8] to-[#c7fff0] opacity-30 sm:left-[calc(50%+36rem)] sm:w-[72.1875rem] moving-gradient-2"
					 style="clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)">
				</div>
			</div>
		</div>
	</div>
	<script src="~/js/site.js" asp-append-version="true"></script>
	<script src="~/node_modules/flowbite/dist/flowbite.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.2.1/flowbite.min.js"></script>
</body>
</html>