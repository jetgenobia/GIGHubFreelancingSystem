@model Freelancing.Models.CreateTerminationViewModel
@{
    Layout = Model.IsClient ? "_LayoutClient" : "_LayoutFreelancer";
    ViewData["Title"] = "Request Contract Termination - " + Model.ProjectName;
}

<div class="p-4 sm:ml-64">
    <div class="p-4 mt-20">
        <div class="max-w-4xl mx-auto">
            <!-- Header -->
            <div class="flex items-center justify-between mb-6">
                <div class="flex items-center space-x-4">
                    <a href="@Url.Action("Details", "Contract", new { id = Model.ContractId })" class="text-blue-600 hover:text-blue-800">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                        </svg>
                    </a>
                    <h1 class="text-3xl font-bold text-gray-900">Request Contract Termination</h1>
                </div>
                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-red-100 text-red-800">
                    Termination Request
                </span>
            </div>

            <form asp-action="Create" method="post" class="space-y-6">
                <input type="hidden" asp-for="ContractId" />

                <!-- Contract Summary -->
                <div class="bg-white rounded-lg shadow p-6">
                    <h2 class="text-xl font-semibold text-gray-900 mb-4">Contract Summary</h2>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Project Name</label>
                            <p class="text-gray-900 bg-gray-50 p-2 rounded">@Model.ProjectName</p>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Contract Title</label>
                            <p class="text-gray-900 bg-gray-50 p-2 rounded">@Model.ContractTitle</p>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Client</label>
                            <p class="text-gray-900 bg-gray-50 p-2 rounded">@Model.ClientName</p>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Freelancer</label>
                            <p class="text-gray-900 bg-gray-50 p-2 rounded">@Model.FreelancerName</p>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Agreed Amount</label>
                            <p class="text-gray-900 bg-gray-50 p-2 rounded font-semibold text-green-600">₱@Model.AgreedAmount</p>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Current Status</label>
                            <p class="text-gray-900 bg-gray-50 p-2 rounded">@Model.ContractStatus</p>
                        </div>
                    </div>
                </div>

                <!-- Termination Details -->
                <div class="bg-white rounded-lg shadow p-6">
                    <h2 class="text-xl font-semibold text-gray-900 mb-4">Termination Details</h2>
                    
                    <div class="space-y-4">
                        <div>
                            <label asp-for="TerminationReason" class="block text-sm font-medium text-gray-700 mb-2">Reason for Termination *</label>
                            <input asp-for="TerminationReason" type="text" class="w-full p-3 text-sm text-gray-900 border border-gray-300 rounded-lg bg-gray-50 focus:ring-blue-500 focus:border-blue-500" placeholder="Brief reason for termination" />
                            <span asp-validation-for="TerminationReason" class="text-red-600 text-sm"></span>
                        </div>

                        <div>
                            <label asp-for="TerminationDetails" class="block text-sm font-medium text-gray-700 mb-2">Detailed Explanation *</label>
                            <textarea asp-for="TerminationDetails" rows="4" class="w-full p-3 text-sm text-gray-900 border border-gray-300 rounded-lg bg-gray-50 focus:ring-blue-500 focus:border-blue-500" placeholder="Provide detailed explanation for the termination request"></textarea>
                            <span asp-validation-for="TerminationDetails" class="text-red-600 text-sm"></span>
                        </div>

                        <div>
                            <label asp-for="FinalPayment" class="block text-sm font-medium text-gray-700 mb-2">Final Payment Amount (₱) *</label>
                            <input asp-for="FinalPayment" type="number" step="0.01" min="0" class="w-full p-3 text-sm text-gray-900 border border-gray-300 rounded-lg bg-gray-50 focus:ring-blue-500 focus:border-blue-500" />
                            <span asp-validation-for="FinalPayment" class="text-red-600 text-sm"></span>
                        </div>

                        <div>
                            <label asp-for="SettlementNotes" class="block text-sm font-medium text-gray-700 mb-2">Settlement Notes</label>
                            <textarea asp-for="SettlementNotes" rows="3" class="w-full p-3 text-sm text-gray-900 border border-gray-300 rounded-lg bg-gray-50 focus:ring-blue-500 focus:border-blue-500" placeholder="Additional notes about settlement terms, deliverables, etc."></textarea>
                            <span asp-validation-for="SettlementNotes" class="text-red-600 text-sm"></span>
                        </div>
                    </div>
                </div>

                <!-- Agreement Section -->
                <div class="bg-white rounded-lg shadow p-6">
                    <h2 class="text-xl font-semibold text-gray-900 mb-4">Agreement</h2>
                    
                    <div class="space-y-4">
                        <div class="flex items-start">
                            <input asp-for="UnderstandImplications" type="checkbox" class="mt-1 h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500" />
                            <label asp-for="UnderstandImplications" class="ml-3 text-sm text-gray-700">
                                I understand that requesting contract termination will require both parties to sign the termination agreement before the contract can be officially terminated.
                            </label>
                        </div>
                        <span asp-validation-for="UnderstandImplications" class="text-red-600 text-sm block ml-7"></span>

                        <div class="flex items-start">
                            <input asp-for="AgreeToTerms" type="checkbox" class="mt-1 h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500" />
                            <label asp-for="AgreeToTerms" class="ml-3 text-sm text-gray-700">
                                I agree to the termination terms and conditions, including the final payment amount specified above.
                            </label>
                        </div>
                        <span asp-validation-for="AgreeToTerms" class="text-red-600 text-sm block ml-7"></span>
                    </div>
                </div>

                <!-- Warning Section -->
                <div class="bg-red-50 border border-red-200 rounded-lg p-4">
                    <div class="flex">
                        <svg class="w-5 h-5 text-red-400 mr-2 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
                        </svg>
                        <div>
                            <h3 class="text-sm font-medium text-red-800">Important Notice</h3>
                            <div class="mt-2 text-sm text-red-700">
                                <ul class="list-disc list-inside space-y-1">
                                    <li>This termination request will be sent to the other party for review and signature</li>
                                    <li>Both parties must sign the termination agreement for it to take effect</li>
                                    <li>Once signed by both parties, the contract will be officially terminated</li>
                                    <li>This action cannot be undone once both parties have signed</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Actions -->
                <div class="flex items-center justify-between bg-gray-50 p-4 rounded-lg">
                    <div class="text-sm text-gray-600">
                        <p>Review all termination details carefully before submitting.</p>
                        <p>The other party will be notified to review and sign the termination agreement.</p>
                    </div>
                    <div class="flex space-x-3">
                        <a href="@Url.Action("Details", "Contract", new { id = Model.ContractId })" class="text-gray-900 bg-white border border-gray-300 focus:outline-none hover:bg-gray-100 focus:ring-4 focus:ring-gray-100 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2">
                            Cancel
                        </a>
                        <button type="submit" class="focus:outline-none text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2">
                            Submit Termination Request
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.querySelector('form');
            const understandCheckbox = document.getElementById('UnderstandImplications');
            const agreeCheckbox = document.getElementById('AgreeToTerms');
            
            // Debug: Log form submission
            form.addEventListener('submit', function(e) {
                console.log('Form submitted');
                console.log('UnderstandImplications:', understandCheckbox.checked);
                console.log('AgreeToTerms:', agreeCheckbox.checked);
                
                // Check if both checkboxes are checked
                if (!understandCheckbox.checked || !agreeCheckbox.checked) {
                    e.preventDefault(); // Prevent form submission
                    console.log('Form submission prevented - checkboxes not checked');
                    
                    // Highlight unchecked checkboxes with visual feedback
                    if (!understandCheckbox.checked) {
                        understandCheckbox.parentElement.style.backgroundColor = '#fef2f2';
                        understandCheckbox.parentElement.style.border = '1px solid #fecaca';
                        understandCheckbox.parentElement.style.borderRadius = '0.375rem';
                        understandCheckbox.parentElement.style.padding = '0.5rem';
                    }
                    
                    if (!agreeCheckbox.checked) {
                        agreeCheckbox.parentElement.style.backgroundColor = '#fef2f2';
                        agreeCheckbox.parentElement.style.border = '1px solid #fecaca';
                        agreeCheckbox.parentElement.style.borderRadius = '0.375rem';
                        agreeCheckbox.parentElement.style.padding = '0.5rem';
                    }
                    
                    return false;
                }
                
                console.log('Form submission allowed - all checkboxes checked');
                
                // If both checkboxes are checked, remove any highlighting
                understandCheckbox.parentElement.style.backgroundColor = '';
                understandCheckbox.parentElement.style.border = '';
                understandCheckbox.parentElement.style.borderRadius = '';
                understandCheckbox.parentElement.style.padding = '';
                
                agreeCheckbox.parentElement.style.backgroundColor = '';
                agreeCheckbox.parentElement.style.border = '';
                agreeCheckbox.parentElement.style.borderRadius = '';
                agreeCheckbox.parentElement.style.padding = '';
            });
            
            // Remove highlighting when checkboxes are checked
            understandCheckbox.addEventListener('change', function() {
                if (this.checked) {
                    this.parentElement.style.backgroundColor = '';
                    this.parentElement.style.border = '';
                    this.parentElement.style.borderRadius = '';
                    this.parentElement.style.padding = '';
                }
            });
            
            agreeCheckbox.addEventListener('change', function() {
                if (this.checked) {
                    this.parentElement.style.backgroundColor = '';
                    this.parentElement.style.border = '';
                    this.parentElement.style.borderRadius = '';
                    this.parentElement.style.padding = '';
                }
            });
        });
    </script>
}
